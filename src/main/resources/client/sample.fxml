<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<VBox fx:controller="client.Controller"
      xmlns:fx="http://javafx.com/fxml" stylesheets="@mystyle.css">
    <HBox fx:id="loginPanel">
        <TextField fx:id="loginField" promptText="логин" HBox.hgrow="ALWAYS" onAction="#authorization"/>
        <PasswordField fx:id="passFiead" promptText="пароль" HBox.hgrow="ALWAYS" onAction="#authorization"/>
        <Button fx:id="buttonAuth" text="Авторизоваться" onAction="#authorization"/>
        <Button fx:id="buttonReg" text="Зарегистрироваться" onAction="#onShowReg"/>
    </HBox>

    <VBox fx:id="regPanel" visible="false" managed="false">
        <Label text="Ваш логин" />
        <TextField fx:id="regloginField" promptText="логин" HBox.hgrow="ALWAYS" onAction="#authorization"/>
        <Label text="Ваш пароль" />
        <PasswordField fx:id="regpassFiead" promptText="пароль" HBox.hgrow="ALWAYS" onAction="#authorization"/>
        <Label text="Ваш пароль еще раз" />
        <PasswordField fx:id="regpassFiead2" promptText="пароль" HBox.hgrow="ALWAYS" onAction="#authorization"/>
        <Label text="Ваш email" />
        <TextField fx:id="regEmailField" promptText="email" HBox.hgrow="ALWAYS" onAction="#authorization"/>
        <Button fx:id="okButtonReg" text="Зарегистрироваться" onAction="#offShowReg"/>
    </VBox>

    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="textArea" editable="false"/>
        <ListView fx:id="clientsListArea" onMouseClicked="#clientChoise"/>
    </HBox>

    <HBox fx:id="messagePanel" visible="false" managed="false">
        <TextField fx:id="msgField" promptText="Написать сообщение..." HBox.hgrow="ALWAYS" onAction="#sendMsg"/>
        <Button fx:id="buttonSend" text="Отправить" onAction="#sendMsg"/>
    </HBox>
</VBox>